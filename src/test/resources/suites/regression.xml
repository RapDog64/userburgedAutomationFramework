<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Regression suite" verbose="1">

    <listeners>
        <listener class-name="ru.userbugred.config.listener.AllureListener"/>
    </listeners>

    <test name="Regression tests on Chrome">
        <parameter name="browser" value="chrome"/>

        <packages>
            <package name="ru.userbugred.test"/>
        </packages>
    </test>

    <test name="Regression tests on Firefox">
        <parameter name="browser" value="firefox"/>

        <packages>
            <package name="ru.userbugred.test"/>
        </packages>
    </test>
</suite>